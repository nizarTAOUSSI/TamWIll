<section class="py-24 bg-gray-50 text-black relative overflow-hidden" id="contact-us">

    <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-gray-200 rounded-full blur-3xl opacity-50 pointer-events-none"></div>

    <div class="max-w-6xl mx-auto px-4 md:px-6 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">

            <div class="pt-8">
                <h2 class="text-sm font-bold tracking-widest uppercase text-gray-500 mb-3">Support</h2>
                <h3 class="text-5xl font-black tracking-tighter mb-6 leading-tight">
                    Got a question? <br>
                    <span class="underline decoration-4 decoration-black underline-offset-4">Let's talk.</span>
                </h3>
                <p class="text-lg text-gray-600 mb-10 leading-relaxed max-w-md">
                    Whether you want to launch a project, ask about fees, or just say hello, we are here to help you.
                </p>

                <div class="space-y-8">
                    <div class="flex items-start gap-4 group">
                        <div class="w-12 h-12 rounded-lg bg-black text-white flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        </div>
                        <div>
                            <h4 class="font-bold text-lg">Email Us</h4>
                            <a href="mailto:support@crowdfund.com" class="text-gray-600 hover:text-black hover:underline">support@crowdfund.com</a>
                            <p class="text-sm text-gray-400 mt-1">Response time: 24 hours</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4 group">
                        <div class="w-12 h-12 rounded-lg bg-white border-2 border-black text-black flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        </div>
                        <div>
                            <h4 class="font-bold text-lg">Visit Us</h4>
                            <p class="text-gray-600">123 Innovation Drive<br>Casablanca, Morocco</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white border-2 border-black rounded-2xl p-8 md:p-10 shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] relative">

                <div class="absolute -top-3 -right-3 w-8 h-8 bg-black"></div>

                <form action="#" method="POST" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label for="name" class="text-sm font-bold uppercase tracking-wider">Name</label>
                            <input type="text" id="name" name="name" placeholder="Full Name"
                                class="w-full bg-gray-50 border-2 border-gray-200 rounded-lg p-3 outline-none focus:border-black focus:bg-white transition-all duration-200 placeholder:text-gray-400 font-medium">
                        </div>

                        <div class="space-y-2">
                            <label for="email" class="text-sm font-bold uppercase tracking-wider">Email</label>
                            <input type="email" id="email" name="email" placeholder="email@example.com"
                                class="w-full bg-gray-50 border-2 border-gray-200 rounded-lg p-3 outline-none focus:border-black focus:bg-white transition-all duration-200 placeholder:text-gray-400 font-medium">
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label for="subject" class="text-sm font-bold uppercase tracking-wider">Subject</label>
                        <select id="subject" name="subject"
                            class="w-full bg-gray-50 border-2 border-gray-200 rounded-lg p-3 outline-none focus:border-black focus:bg-white transition-all duration-200 font-medium appearance-none cursor-pointer">
                            <option value="" disabled selected>Select a topic</option>
                            <option value="support">General Support</option>
                            <option value="billing">Billing & Donations</option>
                            <option value="partnership">Partnerships</option>
                        </select>
                    </div>

                    <div class="space-y-2">
                        <label for="message" class="text-sm font-bold uppercase tracking-wider">Message</label>
                        <textarea id="message" name="message" rows="4" placeholder="How can we help you?"
                            class="w-full bg-gray-50 border-2 border-gray-200 rounded-lg p-3 outline-none focus:border-black focus:bg-white transition-all duration-200 placeholder:text-gray-400 font-medium resize-none"></textarea>
                    </div>

                    <button type="submit" class="w-full bg-black text-white font-bold text-lg py-4 rounded-lg hover:bg-gray-800 transition-all active:translate-y-1 active:shadow-none shadow-lg flex justify-center items-center gap-2 group">
                        Send Message
                        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                    </button>
                </form>
            </div>

        </div>
    </div>
</section>
