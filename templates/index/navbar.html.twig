{% block body %}
	<nav class="flex items-center justify-between m-2">
		<div class="flex items-center justify-center font-bold">
			<img src="{{ asset('TamwillLogo.png') }}" alt="TamWill Logo" class="h-20 w-20">
			<h1 class="text-5xl">TamWill</h1>
		</div>
		<ul class="flex space-x-8 p-4 text-dark-700 font-medium">
			<li class="hover:scale-110">
				<a href="/">Home</a>
			</li>
			<li class="hover:scale-110">
				<a href="/#about-us">About US</a>
			</li>
			<li class="hover:scale-110">
				<a href="/#how-it-works">How it works</a>
			</li>
			<li class="hover:scale-110">
				<a href="/campaigns">Campaigns</a>
			</li>
			<li class="hover:scale-110">
				<a href="/#contact-us">Contact US</a>
			</li>
		</ul>

		<div class="flex items-center justify-center gap-3 mr-5">
			{% if app.user %}
                <div class="relative group">

                    <button class="flex items-center gap-2 focus:outline-none group">
                        <span class="hidden md:block font-bold text-sm mr-1">{{ app.user.name }}</span>
                        <img class="rounded-full w-10 h-10 object-cover border-2 border-transparent group-hover:border-black transition-all duration-200" src="https://ui-avatars.com/api/?name={{ app.user.name|url_encode }}&background=000&color=fff" alt="{{ app.user.name }}"/>
                        <svg class="w-4 h-4 text-gray-500 group-hover:text-black transition-transform duration-200 group-focus:rotate-180" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <div class="absolute right-0 mt-2 w-48 bg-white border-2 border-black rounded-lg shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] opacity-0 invisible group-hover:opacity-100 group-hover:visible group-focus-within:opacity-100 group-focus-within:visible transition-all duration-200 z-50 transform origin-top-right">

                        <div class="block px-4 py-3 border-b border-gray-100 md:hidden">
                            <p class="text-sm text-gray-500">Logged in as</p>
                            <p class="text-sm font-bold truncate">{{ app.user.name }}</p>
                        </div>

                        <a href="#" class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-black hover:font-bold transition-colors">
                            <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            My Profile
                        </a>

                        <div class="border-t border-gray-100 my-1"></div>

                        <form method="post" action="{{ path('app_logout') }}" class="block w-full">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                            <button type="submit" class="flex w-full items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50 hover:text-red-700 font-medium transition-colors text-left">
                                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                Logout
                            </button>
                        </form>
                    </div>
                </div>
			{% else %}
				<button class="hover:scale-110 cursor-pointer">
					<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 320 512" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg">
						<path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"></path>
					</svg>
				</button>
				<button class="hover:scale-110 cursor-pointer">
					<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 24 24" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg">
						<path d="M10.4883 14.651L15.25 21H22.25L14.3917 10.5223L20.9308 3H18.2808L13.1643 8.88578L8.75 3H1.75L9.26086 13.0145L2.31915 21H4.96917L10.4883 14.651ZM16.25 19L5.75 5H7.75L18.25 19H16.25Z"></path>
					</svg>
				</button>
				<button class="hover:scale-110 cursor-pointer">
					<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 448 512" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg">
						<path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"></path>
					</svg>
				</button>
				<button class="hover:scale-110 cursor-pointer">
					<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 448 512" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg">
						<path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"></path>
					</svg>
				</button>
				{% if app.request.pathInfo != '/' %}
					<button onclick="openModal()" class="hover:scale-110 cursor-pointer px-3 py-1 rounded-4xl bg-black text-white font-semibold">
						Sign In
					</button>
					<button onclick="openModal(true)" class="hover:scale-110 cursor-pointer px-3 py-1 rounded-4xl bg-white text-black border-2 border-black font-semibold">
						Sign Up
					</button>
				{% endif %}
			{% endif  %}
		</div>

	</nav>
{% endblock %}
