<section class="py-24 bg-white text-black overflow-hidden relative" id="how-it-works">
    <div class="absolute inset-0 opacity-[0.03] pointer-events-none"
         style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 24px 24px;">
    </div>

    <div class="max-w-6xl mx-auto px-4 md:px-6 relative z-10">

        <div class="text-center max-w-2xl mx-auto mb-20">
            <h2 class="text-sm font-bold tracking-widest uppercase text-gray-500 mb-3">The Process</h2>
            <h3 class="text-4xl md:text-5xl font-black tracking-tight mb-6">Bring your vision to life.</h3>
            <p class="text-lg text-gray-600 leading-relaxed">
                Crowdfunding doesn't have to be complicated. We've streamlined the process into three simple steps.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 relative">

            <div class="hidden md:block absolute top-12 left-[16%] right-[16%] h-0.5 bg-gray-100 -z-10"></div>

            {% set steps = [
                {
                    'num': '01',
                    'title': 'Create your Campaign',
                    'desc': 'Set your funding goal, tell your story, and upload compelling images to showcase your project.',
                    'icon_path': 'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z'
                },
                {
                    'num': '02',
                    'title': 'Share with the World',
                    'desc': 'Launch your campaign and share it with your community. Use our tools to track analytics.',
                    'icon_path': 'M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z'
                },
                {
                    'num': '03',
                    'title': 'Get Funded',
                    'desc': 'Receive contributions securely. Once you hit your goal, the funds are released to you.',
                    'icon_path': 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
                }
            ] %}

            {% for step in steps %}
                <div class="relative group">
                    <div class="flex flex-col items-center text-center">
                        <div class="relative mb-8">
                            <span class="text-8xl font-black text-gray-50 opacity-50 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 select-none group-hover:scale-110 group-hover:text-gray-100 transition duration-500">
                                {{ step.num }}
                            </span>

                            <div class="w-24 h-24 bg-white border-2 border-black rounded-full flex items-center justify-center relative z-10 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] group-hover:translate-y-1 group-hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all duration-300">
                                <svg class="w-10 h-10 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="{{ step.icon_path }}"></path>
                                </svg>
                            </div>
                        </div>

                        <h4 class="text-xl font-black mb-3 text-black">{{ step.title }}</h4>
                        <p class="text-gray-600 leading-relaxed max-w-xs mx-auto">
                            {{ step.desc }}
                        </p>
                    </div>
                </div>
            {% endfor %}

        </div>

        <div class="text-center mt-20">
            <a href="#" class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-white transition-all duration-200 bg-black border-2 border-transparent rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 shadow-lg hover:shadow-xl hover:-translate-y-1">
                Start Your Project
                <svg class="w-5 h-5 ml-2 -mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
        </div>

    </div>
</section>
