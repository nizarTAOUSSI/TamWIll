{% extends 'base.html.twig' %}

{% block title %}
	{{ project.title }}
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-white text-black font-sans selection:bg-black selection:text-white">

		<div class="max-w-6xl mx-auto px-4 md:px-6 grid grid-cols-1 lg:grid-cols-3 gap-12 py-12">

			<div class="lg:col-span-2">

				<div class="w-full h-64 md:h-96 bg-gray-100 rounded-xl overflow-hidden mb-8 relative border border-gray-200 shadow-sm">
					{% if project.image %}
						<img src="{{ project.image }}" class="w-full h-full object-cover hover:scale-105 transition-transform duration-700" alt="{{ project.title }}">
					{% else %}
						<div class="flex flex-col items-center justify-center h-full text-gray-400">
							<svg class="w-12 h-12 mb-2 opacity-50" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
							</svg>
							<span>No Image Available</span>
						</div>
					{% endif %}

					<div class="absolute top-4 left-4 bg-white border-2 border-black px-3 py-1 text-xs font-bold uppercase tracking-wider shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
						{{ project.status }}
					</div>
				</div>

				<div class="mb-10">
					<div class="flex items-center gap-3 mb-6">
						<img class="rounded-full w-12 h-12 object-cover border border-gray-200" src="https://ui-avatars.com/api/?name={{ project.creator.name|url_encode }}&background=000&color=fff" alt="{{ project.creator.name }}"/>
						<div>
							<p class="text-xs text-gray-500 uppercase tracking-widest font-bold">Created By</p>
							<p class="font-bold text-lg leading-none">{{ project.creator.name }}</p>
						</div>
					</div>

					<h1 class="text-4xl md:text-5xl font-black mb-6 leading-tight tracking-tight">{{ project.title }}</h1>

					<div class="prose prose-lg prose-slate text-gray-800 max-w-none">
						{{ project.description|nl2br }}
					</div>
				</div>

				<div class="mt-16 pt-10 border-t border-gray-200" id="comments">
					<h3 class="text-2xl font-black mb-6 flex items-center gap-2">
						<span>Comments</span>
						<span class="text-sm bg-gray-100 text-gray-600 px-2 py-1 rounded-full">{{ comments|length }}</span>
					</h3>

					<div class="mb-10">
						{% if app.user %}
							<form method="post" action="{{ path('app_project_comment', {id: project.id}) }}" class="relative">
								<div class="relative">
									<input name="content" class="w-full pl-4 pr-14 py-4 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-black focus:bg-white transition-colors font-medium placeholder:text-gray-400" type="text" placeholder="Ask a question or cheer them on..." required/>
									<button type="submit" class="absolute right-2 top-2 bottom-2 bg-black text-white p-2 rounded-lg hover:bg-gray-800 transition-colors flex items-center justify-center aspect-square">
										<svg class="w-5 h-5 transform -rotate-45 translate-x-0.5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
										</svg>
									</button>
								</div>
							</form>
						{% else %}
							<div class="bg-gray-50 border border-gray-200 rounded-xl p-6 text-center">
								<p class="text-gray-600">Please
									<a href="{{ path('app_login') }}" class="font-bold underline text-black">log in</a>
									to leave a comment.</p>
							</div>
						{% endif %}
					</div>

					{% if comments|length > 0 %}
						<div class="space-y-6">
							{% for comment in comments %}
								<div class="flex gap-4 group">
									<div class="flex-shrink-0">
										<img src="https://ui-avatars.com/api/?name={{ comment.author.name|url_encode }}&background=random" alt="{{ comment.author.name }}" class="w-10 h-10 rounded-full object-cover border border-gray-200">
									</div>
									<div class="flex-1">
										<div class="flex items-baseline gap-2 mb-1">
											<span class="font-bold text-black">{{ comment.author.name }}</span>
											<span class="text-xs text-gray-400">{{ comment.createdAt|date('M d, Y') }}</span>
										</div>
										<p class="text-gray-700 leading-relaxed">{{ comment.content }}</p>
									</div>
								</div>
							{% endfor %}
						</div>
					{% else %}
						<div class="text-center py-10 bg-gray-50 rounded-xl border border-dashed border-gray-300">
							<p class="text-gray-500 italic">No comments yet. Be the first to say something!</p>
						</div>
					{% endif %}
				</div>
			</div>

			<div class="lg:col-span-1 relative">
				<div class="sticky top-8 space-y-8">

					<div class="border-2 border-black p-6 rounded-xl bg-white shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] relative z-10">
						<div class="mb-4">
							<div class="flex items-baseline gap-1">
								<span class="text-4xl font-black">${{ project.collectedAmount|number_format }}</span>
							</div>
							<span class="text-gray-500 text-sm font-medium">raised of ${{ project.goalAmount|number_format }}
								goal</span>
						</div>

						{% set percent = (project.collectedAmount / project.goalAmount) * 100 %}
						<div class="w-full bg-gray-100 h-4 rounded-full overflow-hidden mb-6 border border-gray-200">
							<div class="bg-black h-full transition-all duration-1000 ease-out relative" style="width: {{ percent > 100 ? 100 : percent }}%">
								<div class="absolute inset-0 opacity-20" style="background-image: linear-gradient(45deg,rgba(255,255,255,.15) 25%,transparent 25%,transparent 50%,rgba(255,255,255,.15) 50%,rgba(255,255,255,.15) 75%,transparent 75%,transparent); background-size: 1rem 1rem;"></div>
							</div>
						</div>

						<div class="grid grid-cols-2 gap-4 mb-8">
							<div class="p-3 bg-gray-50 rounded-lg">
								<span class="block font-black text-xl">{{ project.contributions|length }}</span>
								<span class="text-xs text-gray-500 uppercase font-bold tracking-wider">Backers</span>
							</div>
							<div class="p-3 bg-gray-50 rounded-lg">
								<span class="block font-black text-xl">
									{% if project.endDate %}
										{{ date(project.endDate).diff(date('now')).days }}
									{% else %}
										âˆž
									{% endif %}
								</span>
								<span class="text-xs text-gray-500 uppercase font-bold tracking-wider">Days Left</span>
							</div>
						</div>

						<button onclick="toggleModal(true)" class="w-full bg-black text-white font-bold py-4 rounded-lg hover:bg-gray-800 transition-all active:translate-y-1 active:shadow-none shadow-lg">
							Back this project
						</button>
					</div>

					<div class="border border-gray-200 p-6 rounded-xl bg-gray-50/50">
						<h3 class="font-bold text-lg mb-4 flex justify-between items-center">
							<span>Recent Contributors</span>
						</h3>

						<div class="space-y-4 max-h-80 overflow-y-auto pr-2 custom-scrollbar">
							{% for contribution in project.contributions %}
								<div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
									<div class="flex items-center gap-3">
										<div class="w-8 h-8 rounded-full bg-white flex items-center justify-center text-xs font-bold border border-gray-200 text-gray-500 shadow-sm">
											{% if contribution.isAnonymous %}
												<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
												</svg>
											{% else %}
												{{ contribution.user.name|first|upper }}
											{% endif %}
										</div>
										<div>
											<p class="text-sm font-bold text-gray-900 leading-none">
												{% if contribution.isAnonymous %}
													Anonymous
												{% else %}
													{{ contribution.user.name }}
												{% endif %}
											</p>
										</div>
									</div>
									<span class="font-mono text-sm font-bold bg-white px-2 py-1 rounded border border-gray-200">${{ contribution.amount }}</span>
								</div>
							{% else %}
								<p class="text-gray-400 text-center italic text-sm py-4">No contributions yet.</p>
							{% endfor %}
						</div>
					</div>

				</div>
			</div>
		</div>

		<div id="donationModal" class="fixed inset-0 z-[999] hidden">
			<div class="absolute inset-0 bg-white/80 backdrop-blur-md transition-opacity" onclick="toggleModal(false)"></div>

			<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-md p-4 animate-in fade-in zoom-in-95 duration-200">
				<div class="bg-white border-2 border-black rounded-2xl p-8 shadow-[0_20px_50px_rgba(0,0,0,0.15)] relative">

					<button onclick="toggleModal(false)" class="absolute top-4 right-4 p-2 rounded-full hover:bg-gray-100 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
						</svg>
					</button>

					<h2 class="text-2xl font-black mb-2 tracking-tight">Make a contribution</h2>
					<p class="text-gray-500 mb-8 text-sm">You are supporting
						<strong>{{ project.title }}</strong>.</p>

					<form action="#" method="POST">
						<div class="text-center mb-8">
							<div class="inline-flex items-baseline justify-center gap-1">
								<span class="text-2xl font-bold text-gray-400">$</span>
								<span class="text-6xl font-black text-black tracking-tighter" id="amountDisplay">50</span>
							</div>
						</div>

						<div class="mb-8 px-2">
							<input type="range" id="donationRange" name="amount" min="5" max="1000" value="50" step="5" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-black focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2" oninput="updateAmount(this.value)">
							<div class="flex justify-between text-xs font-bold text-gray-400 mt-3 font-mono">
								<span>$5</span>
								<span>$1000+</span>
							</div>
						</div>

						<div class="flex items-center mb-8 bg-gray-50 p-4 rounded-lg border border-gray-100">
							<input id="is_anonymous" name="is_anonymous" type="checkbox" class="w-5 h-5 text-black border-gray-300 rounded focus:ring-black">
							<label for="is_anonymous" class="ml-3 block text-sm text-gray-700 font-bold select-none cursor-pointer">
								Keep my donation anonymous
							</label>
						</div>

						<button type="button" class="w-full bg-black text-white font-bold text-lg py-4 rounded-xl hover:bg-gray-900 transition flex justify-center items-center gap-2 group shadow-xl">
							<span>Proceed to Pay</span>
							<svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
							</svg>
						</button>
					</form>
				</div>
			</div>
		</div>

	</div>

	<script>
		function toggleModal(show) {
        const modal = document.getElementById('donationModal');
        if (show) {
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        } else {
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
        }
        }

        function updateAmount(val) {
        document.getElementById('amountDisplay').innerText = val;
        }
	</script>
{% endblock %}
