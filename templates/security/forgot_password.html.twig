{% extends 'base.html.twig' %}

{% block title %}Forgot Password - TamWill{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-white text-black font-sans py-12 px-4 sm:px-6 lg:px-8">

    <div class="max-w-md w-full bg-white border-2 border-black rounded-xl p-8 shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] relative">

        <div class="absolute top-4 right-4 w-4 h-4 bg-black rounded-full"></div>

        <div class="text-center mb-8">
            <h2 class="text-3xl font-black text-black tracking-tighter mb-2">
                FORGOT PASSWORD?
            </h2>
            <p class="text-sm font-bold text-gray-500">
                No worries! Enter your email and we'll send you a reset link.
            </p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="mb-6 bg-gray-50 border-2 border-black p-4 rounded-lg flex items-center gap-3">
                <div class="bg-black text-white rounded-full p-1">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                </div>
                <p class="text-sm font-bold text-black">{{ message }}</p>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-6 bg-white border-2 border-black p-4 rounded-lg flex items-center gap-3 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                <div class="text-black">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <p class="text-sm font-bold text-black">{{ message }}</p>
            </div>
        {% endfor %}

        <form class="space-y-6" action="{{ path('app_forgot_password') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">

            <div class="group">
                <label for="email" class="block text-xs font-black uppercase tracking-widest text-gray-500 mb-2 group-focus-within:text-black transition-colors">
                    Email Address
                </label>
                <input id="email" name="email" type="email" autocomplete="email" required
                       class="w-full bg-gray-50 border-2 border-gray-200 rounded-lg p-3 text-black font-bold outline-none focus:bg-white focus:border-black transition-all duration-200 placeholder:text-gray-300"
                       placeholder="you@example.com">
            </div>

            <button type="submit" class="w-full bg-black text-white font-bold text-lg py-3 rounded-lg hover:bg-gray-900 transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] active:translate-y-1 active:shadow-none flex justify-center items-center gap-2 group">
                <span>Send Reset Link</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </button>

            <div class="text-center pt-6 border-t border-gray-100">
                <a href="{{ path('app_login') }}" class="inline-flex items-center text-sm font-bold text-gray-400 hover:text-black hover:underline transition-colors">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                    Back to Login
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
